<!DOCTYPE html>
<html>
  <head>
    <title>ECL</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
　　   <div class="container">
        <nav class='nav navbar-nav navbar-left' >
          <span>ECL</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li>
                <%= link_to "Items", admins_items_index_path, class: "glyphicon glyphicon-music" %>
              </li>
              <li>
                <%= link_to "Orders", admins_orders_index_path, class: "glyphicon glyphicon-list-alt" %>
              </li>
              <li>
                <%= link_to 'Users',admins_users_index_path, class: "glyphicon glyphicon-user" %>
              </li>
              <li>
                <%= link_to 'Add Item',admins_items_new_path, class: "glyphicon glyphicon-plus" %>
              </li>
              <li>
                <%= link_to "Logout", destroy_admin_session_path, class: "glyphicon glyphicon-log-out", method: :delete %>
              </li>
            <% else %>
              <li>
                <%= link_to "Login", new_admin_session_path, class: "glyphicon glyphicon-log-in" %>
              </li>
              <li>
                <%= link_to "Sign up", new_admin_registration_path, class: "glyphicon glyphicon-edit" %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <% if flash[:notice] %>
      <div class=“flash”>
        <%= flash[:notice] %>
      </div>
    <% end %>
<br>
<br>
<br>
<br>
<br>
   <%= yield %>
  </body>
</html>