<div class="container">

    <div class="row">

      <div class="col-lg-3">
        <table class="table table-stryped">
          <thead>
             <h2>User info</h2>
          </thead>

            <tbody>
            <tr>
              <td><%= @user.kana_family_name %><%= @user.kana_first_name %></td>
            </tr>
            <tr>
              <td><%= @user.family_name %><%= @user.first_name %></td>
            </tr>
            <div>
              <% @user.addresses.each do |address| %>
              <tr><td><%= address.post_number %></td></tr>
              <tr>
              <td><%= address.address %></td>
            </tr>
            <% end %>
          </div>
              
            
            <tr>
              <td><%= @user.phone_number %></td>
              <td></td>
            </tr>
            <tr>
              <td><%= @user.email %></td>
              <td></td>
            </tr>
            <tr>
              <td><%= link_to "編集",edit_admins_user_path(@user.id),class: "col-lg-12 btn btn-default" %></td>
              <td>
                  <%= link_to "退会する", admins_user_path(@user), method: :delete, class:"btn btn-danger" %>
              </td>
            </tr>
           </tbody>
        </table>


      </div>
      <div class="col-lg-9">
        <table class="table table-stryped">
          <thead>
            <h2>受注履歴</h2>
          </thead>

          <tbody>

            <% @orders.each do |order| %>

            <tr>
              <th>
                <%= order[:created_at].strftime("%Y-%m-%d　%H:%M")  %>
              </th>
              <th>
                <%#<%= order.select :delivery_status, Order.delivery_status.keys.to_a,{} %>
              </th>
            </tr>
            <tr>
              <td>
               住所<br>
                <%= order.address %>
              </td>
              <td>支払い:<%= order.payment_method %><br>合計金額:￥ <%= number_with_delimiter(order.total_price.to_s) %><br>別途送料:￥ <%= order.shipping_fee %>
              </td>
            </tr>
            <tr>
              <td>
                <% order.order_items.each do |order_item| %>
                <%= order_item.item.product_name  %>
              </td>
              <% sub_total = ((order_item.price.to_i * order_item.sheet.to_i)*1.08).round %>
               <td>
                税込: ￥ <%= number_with_delimiter(sub_total.to_s) %>
              </td>
            </tr>
            <% end %>
           <% end %>
            <%= paginate @orders %>
          </tbody>
        </table>
      </div>
    </div>
  </div>



