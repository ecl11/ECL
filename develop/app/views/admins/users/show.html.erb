<div class="container">

    <div class="row">

      <div class="col-lg-3">
        <table class="table table-stryped">
          <thead>
             <h2>User info</h2>
          </thead>

            <tbody>
            <tr>
              <td><%= @user.kana_family_name %></td>
              <td><%= @user.kana_first_name %></td>
            </tr>
            <tr>
              <td><%= @user.family_name %></td>
              <td><%= @user.first_name %></td>
            </tr>
            
            <tr>
              <td><%= @user.phone_number %></td>
              <td></td>
            </tr>
            <tr>
              <td><%= @user.email %></td>
              <td></td>
            </tr>
            <tr>
              <td><%= link_to "編集",edit_admins_user_path(@user.id),class: "col-lg-6 btn btn-default" %></td>
              <td><%= link_to "削除",admins_users_path(@user),class: "col-lg-6 btn-default", data: {:confirm => '本当に消しますか？'}, method: :delete %></td>
            </tr>
           </tbody>
        </table>


      </div>
      <div class="col-lg-9">
        <table class="table table-stryped">
          <thead>
            <h2>受注履歴</h2>
          </thead>

          <tbody>
            <%= @orders.each do |order| %>
            <tr>
              <th>
                <%= order.created_at %>
              </th>
              <th>
                <%= f.select :delivery_status, Order.delivery_status.keys.to_a,{} %>
                
              </th>
            </tr>
            <tr>
              <td>
               〒<%= order.post_number %><br>
                <%= order.address %>
              </td>
              <td>
                支払い:<%= order.payment_method %><br>
　　　　　　　　　　合計金額:<%= order.total_price %>￥<br>
                別途送料:<%= order.shipping_fee %>￥
              </td>
            </tr>
            <tr>
              <td>
                <%= order.orde_items.id %>
              </td>
               <td>
                <%= order_items.price %>×<%= order_items.sheet %>=<%= order.amount %>(税込)
              </td>
            </tr>
            <% end %>
            <%= paginate @orders %>
          </tbody>
        </table>
      </div>
    </div>
  </div>



