<div class="container">

    <div class="row">

      <div class="col-lg-3">
        <table class="table table-stryped">
          <thead>
             <h2>User info</h2>
          </thead>

            <tbody>
            <tr>
              <td><%= @user.kana_family_name %></td>
              <td><%= @user.kana_first_name %></td>
            </tr>
            <tr>
              <td><%= @user.family_name %></td>
              <td><%= @user.first_name %></td>
            </tr>
            <tr>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td><% @user.addresses.each do |address| %></td>
              <td><% address.address %></td>
              <% end %>
            </tr>
            <tr>
              <td><%= @user.phone_number %></td>
              <td></td>
            </tr>
            <tr>
              <td><%= @user.email %></td>
              <td></td>
            </tr>
            <tr>
              <td><%= link_to "編集",edit_admins_user_path(@user.id),class: "col-lg-6 btn btn-default" %></td>
              <td>
                 <%= form_for(@user,:url => {:action => :update}) do |f| %>
                <%= f.select :is_deleted, User.is_deleteds.keys.to_a, {} %>
                  <%= f.submit '退会する' %>
                  <% end %>
              </td>
            </tr>
           </tbody>
        </table>


      </div>
      <div class="col-lg-9">
        <table class="table table-stryped">
          <thead>
            <h2>受注履歴</h2>
          </thead>

          <tbody>

            <% @orders.each do |order| %>
<tr>
              <th>
                <%= order[:created_at].strftime("%Y-%m-%d　%H:%M")  %>
              </th>
              <th>
                <%= order.delivery_status %>
              </th>
            </tr>
            <tr>
              <td>
               配送先<br>
                <%= order.address %>
              </td>
              <td>支払い:<%= order.payment_method %><br>
                合計金額(税込　送料別):￥ <%= number_with_delimiter(order.total_price.round).to_s %><br>
                別途送料:￥ <%= order.shipping_fee %>
              </td>
            </tr>
            <tr>
                <% order.order_items.each do |order_item| %>
              <td>
                <%= order_item.item.product_name  %>
              </td>

              <% sub_total = ((order_item.price.to_i * order_item.sheet.to_i)*1.08).round %>
               <td>
                 <%= number_with_delimiter((order_item.price*1.08).round).to_s%> × <%= order_item.sheet %> = <%= number_with_delimiter((order_item.price*1.08*order_item.sheet).round).to_s %>(税込)<br>
                
              </td>
            </tr>

           <% end %>
           <% end %>
            <%= paginate @orders %>
          </tbody>
        </table>
      </div>
    </div>
  </div>



